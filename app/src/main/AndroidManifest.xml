<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.csiapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- For Baidu Map -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LockedActivity"
              android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Crime.createscene.CreateSceneActivity"
               android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
               android:screenOrientation="portrait" >
            <intent-filter>
                <!-- 新增用的名稱 -->
                <action android:name="com.android.csiapp.ADD_SCENE" />
                <!-- 修改用的名稱 -->
                <action android:name="com.android.csiapp.EDIT_SCENE" />
                <!-- 一定要加入，內容固定不變 -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Crime.listscene.ListActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.listscene.ListDeleteActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.listscene.ListSearchActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.setting.SettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.CreateScene_FP2_NewPeopleActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.CreateScene_FP2_NewItemActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.CreateScene_FP2_NewToolActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.CreateScene_FP3_PositionInformationActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.createscene.CreateScene_FP3_NewPositionActivity_Amap"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.createscene.CreateScene_FP3_NewPositionActivity_Baidumap"
            android:screenOrientation="portrait" />
        <activity android:name=".Crime.createscene.CreateScene_FP5_NewEvidenceActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.CreateScene_FP8_AddWitnessActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.utils.HandWriteActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.utils.SelectAlertDialog"
            android:screenOrientation="portrait"/>
        <activity android:name=".Crime.createscene.OfflineMapActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:screenOrientation="portrait"/>

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>
        <service android:name="com.amap.api.location.APSService">
        </service>

        <service android:name=".PcSocketTransmission.SocketService"
            android:exported="true">
        </service>

        <service
            android:process=":restartservice"
            android:name=".RestartService"
            android:exported="false" />

        <receiver android:name=".PcSocketTransmission.AppInstallReceiver"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="qI2cRYpq2LyyZZjnm7ifMyeIXZVcnGKe" />

        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="5d1714e4a82d5b185fd043188b0459e1" />
    </application>
</manifest>