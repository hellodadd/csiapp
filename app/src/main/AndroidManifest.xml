        <activity android:name=".Cell.SceneActivity" />
        <activity android:name=".Cell.SceneStaticActivity" />
        <activity android:name=".Cell.SceneDynamicActivity" />
        <activity android:name=".Cell.SceneStaticListActivity" />
        <activity android:name=".Cell.SceneDynamicListActivity" />
        <activity android:name=".Cell.SceneCreateEditActivity" />
        <activity android:name=".Cell.SceneStaticOneKeyActivity" />
        <activity android:name=".Cell.SceneStaticDetailInformationActivity" />
        <activity android:name=".Cell.SignalActivity" />
        <activity android:name=".Cell.SignalStaticActivity" />
        <activity android:name=".Cell.SignalDynamicActivity" />
        <activity android:name=".Cell.SignalStaticListActivity" />
        <activity android:name=".Cell.SignalDynamicListActivity" />
        <activity android:name=".Cell.SignalStaticOneKeyActivity" />
        <activity android:name=".Cell.SignalStaticDetailInformationActivity" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" >
        </service>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="qI2cRYpq2LyyZZjnm7ifMyeIXZVcnGKe" />
