    <application
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" />
        <activity android:name=".LockedActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".Csi.CreateSceneActivity">
            <intent-filter>

                <!-- 新增用的名稱 -->
                <action android:name="com.android.csiapp.ADD_SCENE" />
                <!-- 修改用的名稱 -->
                <action android:name="com.android.csiapp.EDIT_SCENE" />
                <!-- 一定要加入，內容固定不變 -->
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Csi.ListActivity" />
        <activity android:name=".Csi.SettingActivity" />
        <activity android:name=".Csi.Create_FP2_NewPeople_Activity" />
