<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 連框顏色值 -->
        <shape>
            <solid android:color="#dddddd" />
            <corners android:radius="2.0dip" />
        </shape>
    <!-- 主體背景顏色值 -->
    <item android:top="0.5dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp">
        <shape>
            <solid android:color="#dddddd"/>

            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <corners android:topLeftRadius="2.0dp"
                android:bottomLeftRadius="2.0dp"/>
        </shape>
    </item>
</layer-list>
