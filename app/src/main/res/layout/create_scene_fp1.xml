                    android:gravity="center"
                    android:text="@string/access_location"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <com.android.csiapp.ClearableEditText
                    android:id="@+id/accessLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_140dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/case_occur_process"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <com.android.csiapp.ClearableEditText
                        android:id="@+id/caseOccurProcess"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:layout_gravity="center" />
                    <Button
                        android:id="@+id/caseOccurProcess_button"
                        android:layout_width="50dp"
                        android:layout_height="36dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="right"
                        android:background="@drawable/select_shape"
                        android:text="生成"
                        android:textSize="12sp"
                        android:textColor="#0065EE"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/scene_condition"
