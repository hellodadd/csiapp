                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/occurred_end_time"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
