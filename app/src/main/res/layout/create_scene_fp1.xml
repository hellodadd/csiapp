                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/occurred_end_time_button"
