<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/red_title"
            android:textColor="#F9574B"
            android:textSize="16sp"
            android:background="#F7F7F7"
            android:paddingTop="16sp"
            android:paddingLeft="16sp"
            android:paddingBottom="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/type"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <Button
                android:id="@+id/informant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/create_item_margin_right"
                android:text="@string/informant"
                android:background="@drawable/form_radiobutton_nor"
                android:clickable="true"/>
            <Button
                android:id="@+id/victim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/victim"
                android:background="@drawable/form_radiobutton_nor"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/name"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <EditText
                android:id="@+id/name_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_name"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/sex"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <Button
                android:id="@+id/man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/create_item_margin_right"
                android:text="@string/man"
                android:background="@drawable/form_radiobutton_nor"
                android:clickable="true"/>
            <Button
                android:id="@+id/woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/woman"
                android:background="@drawable/form_radiobutton_nor"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/identity_number"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <EditText
                android:id="@+id/identity_number_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_number"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/contact_number"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <EditText
                android:id="@+id/contact_number_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_number"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_h_buttom"
            android:layout_marginBottom="@dimen/create_item_margin_bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_60dp"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/living_address"
                android:textSize="@dimen/create_vp2_textsize"
                android:layout_marginRight="@dimen/create_item_margin_right"/>

            <EditText
                android:id="@+id/address_editView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/write_address"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
