<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime People number"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/required_green"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/peopleNumber_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Means"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeMeans_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Character"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeCharacter_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Entrance"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeEntrance_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Timing"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeTiming_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Select Object"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/selectObject_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Export"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeExport_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="People Feature"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/required_red"/>
                </RelativeLayout>
                <EditText
                    android:id="@+id/peopleFeature_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="write feature"
                    android:singleLine="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Feature"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeFeature_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Intrusive Method"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/intrusiveMethod_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Select Location"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/selectLocation_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Crime Purpose"
                        android:textSize="@dimen/create_vp7_textsize"
                        android:background="@drawable/item_shape"/>
                </RelativeLayout>
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimePurpose_spinner"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
