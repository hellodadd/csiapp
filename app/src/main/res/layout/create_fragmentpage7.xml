<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_title"
                android:textColor="#F9574B"
                android:textSize="16sp"
                android:background="#F7F7F7"
                android:paddingTop="16sp"
                android:paddingLeft="16sp"
                android:paddingBottom="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_people_number"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/peopleNumber_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_means"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeMeans_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_character"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeCharacter_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_entrance"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeEntrance_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_timing"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeTiming_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/select_object"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/selectObject_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_export"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeExport_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/people_feature"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/peopleFeature_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_feature"
                    android:singleLine="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_feature"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimeFeature_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/intrusive_method"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/intrusiveMethod_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/select_location"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/selectLocation_spinner"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_purpose"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/crimePurpose_spinner"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
