<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/toolbar"
        android:isScrollContainer="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_title"
                android:textColor="#F9574B"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:background="#FFFFFF"/>

            <ImageView
                android:layout_width="328dp"
                android:layout_height="328dp"
                android:layout_gravity="center"
                android:id="@+id/new_evidence"
                android:background="#FFFFFF"
                android:visibility="gone"
                android:layout_marginBottom="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/evidence_category_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/evidence"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/evidence_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/evidence_name"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <com.android.csiapp.ClearableEditText
                    android:id="@+id/evidence_name_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/name"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/legacy_site"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <com.android.csiapp.ClearableEditText
                    android:id="@+id/legacy_site_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/write_part"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/basic_feature"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <com.android.csiapp.ClearableEditText
                    android:id="@+id/basice_feature_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/write_feature"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_method"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/method_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_time"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/time_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_people"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/getPeople_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
