<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/toolbar"
        android:isScrollContainer="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_title"
                android:textColor="#F9574B"
                android:textSize="16sp"
                android:background="#F7F7F7"
                android:paddingTop="16sp"
                android:paddingLeft="16sp"
                android:paddingBottom="16sp"/>

            <ImageView
                android:layout_width="328dp"
                android:layout_height="328dp"
                android:layout_gravity="center"
                android:id="@+id/new_evidence"
                android:background="#FFFFFF"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Button
                    android:id="@+id/handprint"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text="@string/hand_print"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:background="@drawable/form_radiobutton_nor"
                    android:clickable="true"/>
                <Button
                    android:id="@+id/footprint"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text="@string/foot_print"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:background="@drawable/form_radiobutton_nor"
                    android:clickable="true"/>
                <Button
                    android:id="@+id/toolMark"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/tool_mark"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:background="@drawable/form_radiobutton_nor"
                    android:clickable="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/evidence"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/evidence_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_evidence"
                    android:singleLine="true" />
                <!-- Anita test -->
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/evidence_spinner"
                    android:layout_weight="1" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/evidence_name"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/evidence_name_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/name"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/legacy_site"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/legacy_site_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_part"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/basic_feature"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/basice_feature_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_feature"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_method"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/method_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_method"
                    android:singleLine="true" />
                <!-- Anita test -->
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/method_spinner"
                    android:layout_weight="1" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_time"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/time_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_time"
                    android:singleLine="true" />
                <!-- Anita test -->
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/time_spinner"
                    android:layout_weight="1" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/extraction_people"
                    android:textSize="@dimen/create_vp5_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <EditText
                    android:id="@+id/people_editView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/write_people"
                    android:singleLine="true" />
                <!-- Anita test -->
                <!--<Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/people_spinner"
                    android:layout_weight="1" />-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
