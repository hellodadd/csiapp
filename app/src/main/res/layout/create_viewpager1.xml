<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.csiapp.Create_ViewPager1_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/create_item_margin_right">
                    <TextView
                        android:layout_width="@dimen/create_item_buttom"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Category"
                        android:textSize="@dimen/create_vp1_textsize"
                        android:background="@drawable/item_shape"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/required_red"/>
                </RelativeLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create1_Button2"
                    android:text="Animal"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"
                    android:background="@drawable/select_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create1_Button3"
                    android:text="Pickpocketing"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"
                    android:background="@drawable/select_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create1_Button4"
                    android:text="Motorcycle"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"
                    android:background="@drawable/select_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create1_Button5"
                    android:text="Bicycle"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"
                    android:background="@drawable/select_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/create1_Button6"
                    android:text="Robbery"
                    android:textSize="@dimen/create_vp1_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"
                    android:background="@drawable/select_shape"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
