<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F7F7F7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red_title"
                android:textColor="#F9574B"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:background="#FFFFFF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_people_number"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/peopleNumber_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_means"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimeMeans_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_character"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimeCharacter_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_entrance"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimeEntrance_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_timing"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:id="@+id/crimeTiming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/crimeTiming_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dropdown"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/select_object"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/selectObject_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_export"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimeExport_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/people_feature"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <com.android.csiapp.Crime.utils.ClearableEditText
                    android:id="@+id/peopleFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_feature"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimeFeature_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/intrusive_method"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/intrusiveMethod_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/select_location"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/selectLocation_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/create_item_h_buttom"
                android:layout_marginBottom="@dimen/create_item_margin_bottom"
                android:orientation="horizontal"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_60dp"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/crime_purpose"
                    android:textSize="@dimen/create_vp7_textsize"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/crimePurpose_spinner"
                    android:background="#FFFFFF"
                    android:popupBackground="#FFFFFF"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/create_item_margin_right"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
